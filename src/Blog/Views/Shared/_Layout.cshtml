<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Blog</title>
</head>
<body>
    Layout Head
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="Logout" asp-controller="Account">
            <p>Hello, @User.Identity.Name</p>
            <button type="submit">Logout</button>
        </form>
    }
    else
    {
            <a asp-action="Register" asp-controller="Account">Register</a>
            <a asp-action="Login" asp-controller="Account">Login</a>
    }

    @RenderBody()

    @await (Component.InvokeAsync<Blog.ViewComponents.ArchivedPostViewComponent>())

    Layout Footer

    <script src="~/lib/third-party.js" type="text/javascript"></script>
    <link href="~/lib/site.css" rel="stylesheet" />
</body>

</html>