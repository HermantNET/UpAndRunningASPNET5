<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meal Plan Application</title>
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <h4 class="navbar-brand">Meal Plan Application</h4>

            <a asp-action="Create" asp-controller="Food">Food</a>

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-action="Logout" asp-controller="Account" class="navbar-form navbar-right">
                    <p class="inline navbar-text">Hello, @User.Identity.Name</p>
                    <button type="submit" class="inline btn navbar-btn">Logout</button>
                </form>
            }
            else
            {
                <a asp-action="Register" asp-controller="Account" class="navbar-btn">Register</a>
                <a asp-action="Login" asp-controller="Account" class="navbar-btn">Login</a>
            }
        </nav>
        <hr />

            @RenderBody()

    </div>
    <script src="~/lib/third-party.js" type="text/javascript"></script>
    <link href="~/lib/site.css" rel="stylesheet" />
</body>

</html>