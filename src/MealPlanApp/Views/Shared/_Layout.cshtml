<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meal Plan Application</title>
</head>
<body>
    <div class="container">
        <nav class="navbar">

            <ul class="nav nav-pills">
                <li>
                    <a asp-action="index" asp-controller="Home" class="btn navbar-btn">Home</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Food" class="btn navbar-btn">Food</a>
                </li>
                <li>
                    <a asp-action="Create" asp-controller="MealPlan" class="btn navbar-btn">Settings</a>
                </li>

                @if (User.Identity.IsAuthenticated)
            {
                    <form asp-action="Logout" asp-controller="Account" class="navbar-form navbar-right">
                        <p class="inline navbar-text">Hello, @User.Identity.Name</p>
                        <button type="submit" class="inline btn navbar-btn">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-action="Register" asp-controller="Account" class="btn navbar-btn">Register</a>
                    <a asp-action="Login" asp-controller="Account" class="btn navbar-btn">Login</a>
                }
            </ul>
        </nav>
        <hr />

        @RenderBody()

    </div>
    <script src="~/lib/third-party.js" type="text/javascript"></script>
    <link href="~/lib/site.css" rel="stylesheet" />
</body>

</html>