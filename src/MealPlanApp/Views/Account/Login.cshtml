@model MealPlanApp.Models.Account.LoginViewModel

<h2>New user Registration</h2>

<div asp-validation-summary="All">
    <form role="form" asp-action="Login" asp-antiforgery="true" class="form-horizontal login-register">

        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe" class="form-control" />
            <span asp-validation-for="RememberMe"></span>
        </div>


        <button class="btn btn-default" type="submit">Confirm</button>
    </form>

        <div class="form-group">
            <label>Not Registered?</label>
            <a asp-action="Register">Create a new account</a>
        </div>
</div>